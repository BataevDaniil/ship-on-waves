{
  "root": true,
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "indent": [
      "error",
      "tab",
      {"SwitchCase": 1}
    ],
    "no-tabs": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-shadow": "off",
    "curly": [
      2,
      "multi",
      "consistent"
    ],
    "no-plusplus": "off",
    "no-return-assign": "off",
    "no-mixed-operators": "off",
    "one-var": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": "off"
  }
}
