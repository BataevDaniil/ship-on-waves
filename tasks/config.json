{
  "src": {
    "pug": "src/pug/main.pug",
    "js": "src/js/main.{js,jsx}",
    "sass": "src/sass/main.sass",
    "img": "src/img/**/*.*"
  },
  "build": {
    "path": "build",
    "img": "build/img",
    "html": "build",
    "js": "build/js",
    "css": "build/css"
  },
  "watch": {
    "pug": "src/pug/**/*.{pug,html}",
    "sass": "src/sass/**/*.sass",
    "img": "src/img/**/*"
  },
  "clean": "build",
  "browserSync": {
    "port": 3000,
    "baseDir": "build"
  }
}
